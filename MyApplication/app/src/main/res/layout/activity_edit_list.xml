<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nicodangelo.list.EditList">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:textSize="40dp"
        android:minWidth="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="commitChange" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cAmount"
        android:layout_marginBottom="45dp"
        android:hint="Change Amount"
        android:layout_above="@+id/cLow"
        android:layout_alignRight="@+id/cLow"
        android:layout_alignEnd="@+id/cLow"
        android:layout_alignLeft="@+id/cLow"
        android:layout_alignStart="@+id/cLow" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cLow"
        android:hint="Set Low Amount"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commit Edits"
        android:id="@+id/button"
        android:layout_below="@+id/cLow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:onClick="commitChange" />
</RelativeLayout>
